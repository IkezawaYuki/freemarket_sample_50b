    .product__info#product-info
      .product__info__inner-content#content-detail
        .product__info__inner-content__image#content-img
          %ul#slider
            %li
              = image_tag 'turntable_01.jpg', height: '230', width: '230', class:'product_img'
            %li
              = image_tag 'turntable_02.jpg', height: '230', width: '230', class:'product_img'
            %li
              = image_tag 'turntable_03.jpg', height: '230', width: '230', class:'product_img'
            %li
              = image_tag 'turntable_04.jpg', height: '230', width: '230', class:'product_img'
            %li
              = image_tag 'turntable_05.jpg', height: '230', width: '230', class:'product_img'
            %li
              = image_tag 'turntable_06.jpg', height: '230', width: '230', class:'product_img'
          %ul#thumb
            %li
              = image_tag 'turntable_01.jpg', height: '60', width: '60', class:'product_s-img'
            %li
              = image_tag 'turntable_02.jpg', height: '60', width: '60', class:'product_s-img'
            %li
              = image_tag 'turntable_03.jpg', height: '60', width: '60', class:'product_s-img'
            %li
              = image_tag 'turntable_04.jpg', height: '60', width: '60', class:'product_s-img'
            %li
              = image_tag 'turntable_05.jpg', height: '60', width: '60', class:'product_s-img'
            %li
              = image_tag 'turntable_06.jpg', height: '60', width: '60', class:'product_s-img'

        .product__info__inner-content__table
        %table
          %tbody
            %tr
              %th 出品者
              %td
                %p#blue bomber
                %i.fas.fa-grin
                500
                %i.fas.fa-meh
                10
                %i.fas.fa-frown
                5
            %tr
              %th カテゴリー
              %td#blue
                おもちゃ・ホビー・グッズ
                %p
                = fa_icon 'chevron-right'
                楽器/機材
                %p
                = fa_icon 'chevron-right'
                DJ機器
            %tr
              %th ブランド
              %td#blue テクニクス
            %tr
              %th 商品のサイズ
              %td
            %tr
              %th 商品の状態
              %td 新品、未使用
            %tr
              %th 配送料の負担
              %td 送料込み(出品者負担)
            %tr
              %th 配送方法
              %td 未定
            %tr
              %th 配送元地域
              %td#blue 東京都
            %tr
              %th 発送の目安
              %td 1~2日で発送
        .product__info__inner-content__account
          .product__info__inner-content__account__price-detail
            .price ¥ 43,000
            .tax (税込)
            .deliverly-btn 送料込み
        .product__info__inner-content__purchase-btn#btn-detail
          = link_to "購入画面に進む", "#", class:'btn-detail'
        .product__info__inner-content__text
          Technics SL-1200MK5ターンテーブル 新品！ 未使用！
          生産終了品です！
          %br
          綺麗なもの探してた方におすすめです。
          お早めにどうぞ！
          %br
          ご不明点があればコメントよろしくお願いいたします。
        .btn-box
          .product__info__inner-content__like-btn
            %i.far.fa-heart
            %span いいね! 1000
          .product__info__inner-content__alert-btn
            %i.far.fa-flag
            %span 不適切な商品の報告
        .product__info__inner-content__safety-btn
          %i.fas.fa-shopping-bag
          %span あんしん・あんぜんへの取り組み
