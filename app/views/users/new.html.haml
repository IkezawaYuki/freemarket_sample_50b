.zentai 
  %header
    = image_tag "mercari_logo_horizontal.png", width: "234", height: "76", class: "mercari_log"
    
  .contents-box
    .contents
      .contents__title
        %h2 新規会員登録
      .contents__btn_container
        .contents__btn_email
          = fa_icon 'envelope',  class:'mail-icon'
          = link_to "メールアドレスで登録"
        .contents__btn_facebook
          = image_tag 'facebook_icon.png',size: "35x35" , class: "facebook-icon "
          = link_to "Facebookで登録"
        .contents__btn_google
          = image_tag 'google_icon.png',size: "35x37" , class: "google-icon "
          = link_to "Googleで登録"
  = render partial:'footer'
  