.zentai
  .header
    = image_tag "logo.svg", width:  "200", height: "50", class: "image_sign_up"
    = image_tag 'signup_header3.png',size: "500x80" , class: "data__img"
  .contents
    .contents-box
      .customer_data_input 発送元・お届け先住所
      .input_box
        .input_box1
          .name
            .ran
              %li
                %label お名前
                %span 必須
              %li
                %input{placeholder: "例) 山田",autocomplete: "off"}
                %input{placeholder: "例) 彩",autocomplete: "off"}
            .ran2
              %li
                %label お名前カナ
                %span 必須
              %li
                %input{placeholder: "例) ヤマダ",autocomplete: "off"}
                %input{placeholder: "例) アヤ",autocomplete: "off"}
            .ran2
              %li
                %label 郵便番号
                %span 必須
              %li
                %input{placeholder: "例) 123-4567",autocomplete: "off"}
            .ran2
              %li
                %label 都道府県
                %span 必須
              %li
                %select{ include_blank: "北海道", class: "prefecture"}
                  = render 'prefecture'
            .ran2
              %li
                %label 市町村
                %span 必須
              %li
                %input{placeholder: "例) 横浜市緑区",autocomplete: "off"}                  
            .ran2
              %li
                %label 番地
                %span.ninni 任意
              %li
                %input{placeholder: "例) 柳ビル123",autocomplete: "off"}
            .ran2
              %li
                %label 電話
                %span.ninni 任意
              %li
                %input{placeholder: "例) 09012345678",autocomplete: "off"}
              %ul
              %button{class: "next", autocomplete: "off"}次に進む

  = render partial:'footer'